generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  phoneNumber String    @unique
  password    String
  verified    Boolean   @default(false)
  firstName   String
  lastName    String
  booking     Booking[]
}

model Admin {
  id          Int       @id @default(autoincrement())
  phoneNumber String    @unique
  firstName   String
  lastName    String
  middleName  String?
  emailId     String
  address     String
  fees        Int
  password    String
  booking     Booking[]

  // @@fulltext([firstName, lastName, category, experience, address, fees ])
}

model image {
  id       Int    @id @default(autoincrement())
  imageUrl String
  publicId String
}

model Booking {
  id       Int      @id @default(autoincrement())
  doctorId Int
  doctor   Admin    @relation(fields: [doctorId], references: [id])
  userId   Int
  user     User     @relation(fields: [userId], references: [id])
  date     DateTime
}
