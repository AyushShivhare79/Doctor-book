generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  phoneNumber String    @unique
  password    String
  firstName   String
  lastName    String
  booking     Booking[]
}

model Admin {
  id          Int       @id @default(autoincrement())
  phoneNumber String    @unique
  password    String
  firstName   String
  lastName    String
  category    String
  experience  Int
  address     String
  fees        Int
  booking     Booking[]
}

model Booking {
  id       Int      @id @default(autoincrement())
  doctorId Int
  doctor   Admin    @relation(fields: [doctorId], references: [id])
  userId   Int
  user     User     @relation(fields: [userId], references: [id])
  date     DateTime
}
